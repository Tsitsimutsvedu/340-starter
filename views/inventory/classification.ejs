<!-- Display the title of the page in the HTML, which can help SEO -->
<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <h1>Inventory</h1>
<% } %>

<!-- In case any messages (Error or otherwise) need to be displayed -->
<% if (messages && messages.length > 0) { %>
  <div class="messages">
    <% messages.forEach(function(msg) { %>
      <p><%= msg %></p>
    <% }) %>
  </div>
<% } %>

<!-- Displays the main content of the page -->
<%- grid %>
